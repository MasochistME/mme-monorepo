{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es6",
    
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",

    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
