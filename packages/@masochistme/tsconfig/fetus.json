{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es6",    
    
    "baseUrl": "./src",
    "module": "CommonJS",  
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,   
    "skipLibCheck": true   
  }
}
